<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llsearchvehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#51BCBCBC"
    android:clickable="true"
    android:isScrollContainer="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/myownbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/backbutton"
            />
        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Search Vehicles"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginLeft="0sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginRight="16sp"
            android:layout_marginEnd="16sp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Logout"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                />
            <ImageButton
                android:id="@+id/logoutbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/logout"
                android:layout_gravity="center"

                />


        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edge"
        android:isScrollContainer="false"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:verticalScrollbarPosition="right"
        android:visibility="visible"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="3dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
           >
            <TextView
                android:id="@+id/capacitylabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:drawableLeft="@drawable/userspic"
                android:fontFamily="sans-serif-medium"
                android:textColor="#020202"
                android:textColorHint="#FFFDFD"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:id="@+id/decreasebutton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/remove"
                />
            <EditText
                android:id="@+id/capacity"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:autofillHints=""
                android:textAlignment="center"
                android:drawablePadding="@dimen/textboxPadding"
                android:ems="11"
                android:hint="1"
                android:inputType="number"
                android:text="1"
                android:textColor="#000000"
                android:textColorHint="#70000000"
                android:gravity="center_horizontal" />
            <ImageButton
                android:id="@+id/increasebutton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/addcircle"
                />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Startlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#020202"
                    android:textColorHint="#FFFDFD"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/startDate"
                    android:layout_width="152dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:hint="Start Date" />

                <EditText
                    android:id="@+id/startTime"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/clock"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:hint="Start Time" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/EndLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#020202"
                    android:textColorHint="#FFFDFD"
                    android:textSize="15sp"
                    android:layout_marginRight="6dp"/>

                <EditText
                    android:id="@+id/endDate"
                    android:layout_width="152dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:hint="End Date" />

                <EditText
                    android:id="@+id/endTime"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/clock"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:hint="End Time" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="156dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonrounded_edge"
                    android:fontFamily="sans-serif-medium"
                    android:text="Search"
                    android:textColor="#020202"
                    android:textColorHint="#FFFDFD"
                    android:textSize="17sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="448dp"
                    tools:layout_editor_absoluteY="671dp" />


            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>